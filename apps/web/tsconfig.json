{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "types": ["vitest/globals", "vite/client"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "paths": {
      "@trackeovrconia/proto": ["types/proto"],
      "@trackeovrconia/utils": ["types/utils"],
      "@trackeovrconia/video-afi": ["types/video-afi"]
    }
  },
  "include": [
    "src",
    "vite.config.ts",
    "vitest.config.ts",
    "tailwind.config.ts",
    "postcss.config.js",
    "scripts/**/*.d.ts"
  ],
  "exclude": ["dist"]
}
