{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2023", "DOM"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "noEmit": true,
    "types": ["node"]
  },
  "include": ["packages", "apps", "tools"],
  "exclude": ["node_modules", "dist"]
}
